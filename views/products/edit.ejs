<% layout('./layouts/boilerplate') %>

<%- include("../partials/navbar") %>


    <div class="row">
        <form action="/product/<%= foundProduct._id %>?_method=PATCH" method="post">
            <div>
                <label for="name"></label>
                <input type="text" id="name" name="name" value="<%= foundProduct.name %>">
            </div>
            <div>
                <label for="img"></label>
                <input type="text" id="img" name="img" value="<%= foundProduct.img %>">
            </div>
            <div>
                <label for="price"></label>
                <input type="number" id="price" name="price" value="<%= foundProduct.price %>">
            </div>
            <div>
                <label for="desc"></label>
                <textarea name="desc" id="desc" rows="3" ><%= foundProduct.desc %></textarea>
            </div>
            <button class="btn btn-success" type="submit">Edit product</button>
        </form>
    </div>

</body>
</html>