<% layout('./layouts/boilerplate') %>

<%- include("../partials/navbar") %>
<%- include("../partials/flash") %>

<!-- 🛍️ Products Page -->
<div class="products-grid-container">
  <div class="row">
    <% for (let item of products) { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= item.img %>" alt="<%= item.name %>" class="card-img-top" loading="lazy">
          <div class="card-body text-center">
            <h2 class="card-title"><%= item.name %></h2>
            <h5 class="card-price">Rs <%= item.price %></h5>
            <p class="card-text"><%= item.desc %></p>

            <a href="/product/<%= item._id %>" class="btn btn-info">View Product</a>

            <% if (currentUser && currentUser.role === 'seller') { %>
              <form action="/product/<%= item._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger" type="submit">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>