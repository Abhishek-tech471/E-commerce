<% layout('./layouts/boilerplate') %>

<%- include("../partials/navbar") %>


    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 justify-content-evenly">
    <% for(let item of products){ %>
        <div class="col d-flex justify-content-center">
            <div class="card h-100">
                <img src="<%= item.img %>" class="card-img-top" alt="..." style="height:250px; object-fit:cover;">
                <div class="card-body text-center">
                    <h2 class="card-title"><%= item.name %></h2>
                    <h5 class="card-title">Rs <%= item.price %></h5>
                    <p class="card-text"><%= item.desc %></p>
                    <a href="/product/<%= item._id %>" class="btn btn-info">View Product</a>
                    <form action="/product/<%= item._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
</div>


</body>
</html>